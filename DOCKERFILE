# Base Stage: Use Node 18 for installing dependencies and generating Prisma client
FROM node:18-alpine AS base
WORKDIR /app
# Copy package files and the prisma folder so the schema is available
COPY package*.json ./
COPY prisma ./prisma
RUN npm install

# Build Stage: Copy the rest of the source code and build the app
FROM base AS build
COPY . .
RUN npm run build

# Production Stage: Use Node 18 for running the production server
FROM node:18-alpine AS production
WORKDIR /app
# Copy package files and prisma folder again if needed at runtime
COPY package*.json ./
COPY prisma ./prisma
RUN npm install --production
# Copy build artifacts from the build stage
COPY --from=build /app/.next ./.next
COPY --from=build /app/public ./public
EXPOSE 3000
CMD ["npm", "start"]
